{
  "name": "forward-widget",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "version": "changeset version",
    "postversion": "npm run build",
    "prerelease": "npm run build",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.4",
    "@changesets/cli": "^2.29.6",
    "nano-staged": "^0.8.0",
    "simple-git-hooks": "^2.13.1",
    "turbo": "^2.5.5",
    "typescript": "5.8.3"
  },
  "simple-git-hooks": {
    "pre-commit": "npx nano-staged"
  },
  "nano-staged": {
    "*.{md,mdx,css,less,scss,json,jsonc,json5,js,jsx,ts,tsx,mjs,mjsx,cjs,cjsx,mts,mtsx,cts,ctsx}": [
      "biome check --write"
    ],
    "package.json": [
      "pnpm run check-dependency-version",
      "biome check --write"
    ],
    "pnpm-lock.yaml": "pnpm dedupe --check"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=22"
  }
}
